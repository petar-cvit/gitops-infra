{
  "properties": {
    "type": {
      "description": "App type",
      "enum": ["api", "job", "processor"],
      "type": "string"
    },
    "replicas": {
      "description": "Number of replicas",
      "type": "integer"
    },
    "image": {
      "description": "Container Image",
      "type": "string"
    },
    "version": {
      "description": "Container image version",
      "type": "string"
    },
    "service": {
      "description": "Expose your application",
      "type": "boolean"
    }
  },
  "if": {
    "properties": {
      "type": { "const": "api" }
    }
  },
  "then": {
    "properties": {
      "scaling": {
        "type": "object",
        "properties": {
          "replicas": {
            "type": "integer",
            "description": "Number of instances you want to deploy",
            "minimum": 0
          },
          "resources": {
            "type": "object",
            "title": "Resources",
            "properties": {
              "cpu": {
                "title": "CPUs",
                "type": "integer",
                "description": "Number of CPUs your applications needs"
              },
              "memory": {
                "title": "Memory",
                "description": "Measured in Gi",
                "type": "integer"
              }
            },
            "order": [
              "cpu",
              "memory"
            ]
          }
        },
        "required": [
          "replicas"
        ],
        "order": [
          "replicas",
          "resources"
        ]
      }
    }
  },
  "else": {
    "properties": {
      "cpu": {
        "type": "string",
        "description": "Where to access the api"
      }
    }
  },
  "order": [
    "type",
    "host",
    "cpu",
    "replicas",
    "image",
    "version",
    "service"
  ],
  "required": [
    "replicas",
    "image",
    "version"
  ],
  "title": "Values",
  "type": "object"
}
